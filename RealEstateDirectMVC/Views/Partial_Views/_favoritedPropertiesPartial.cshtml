@model IEnumerable<_Services.Models.Property.Properties_List>

<h4>Favorited Properties</h4>
<div class="my-property">
    <!-- Property Cards -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var property in Model)
            {
                <div class="col-md-12 mb-4">
                    <div class="card h-100 shadow-sm flex-row">
                        <!-- Property Image -->
                        <img src="@property.Image" class="card-img-left img-fluid" alt="property-img" style="width: 350px; object-fit: cover;">
                        <!-- Card Body (Property Details) -->
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title">
                                    <a href="@Url.Action("Details", "Property", new { id = property.Id })">@property.Title</a>
                                </h5>
                                <p class="card-text">
                                    <i class="fas fa-map-marker-alt"></i> @property.Address
                                </p>
                                <h6 class="text-primary"><span>@property.Price</span> / monthly</h6>
                            </div>
                            <!-- Action Button -->
                            <div class="actions mt-3">
                                <a href="#" class="btn btn-outline-danger btn-sm" onclick="removeFavorite(@property.Id)">
                                    <i class="fa fa-trash me-1"></i> Remove
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12 mb-4">
                <p>No favorited properties found.</p>
            </div>
        }
    </div>
</div>

<script>
    function removeFavorite(propertyId) {
        // هنا يمكنك إضافة منطق لحذف العقار المفضل من قائمة المفضلات
        // مثل إجراء مكالمة API لحذف العقار
        alert('Removing property ID: ' + propertyId);
    }
</script>
